{
  "name": "Blink",
  "vendor" : "rpiontik",
  "version" : 1,
  "subversion" : 0,
  "patch" : 0,
  "description": {
    "ru": "Мигание диодом",
    "en": "Blink Example"
  },
  "components": {
    "blink-app": {
      "source": "blink.js",
      "intent_filter": [
        {
          "action": "thingjs.intent.action.MAIN",
          "category": "thingjs.intent.category.LAUNCH"
        }
      ]
    }
  },
  "scripts": {
    "entry": "blink",
    "subscriptions" : ["$-script-restart", "blink"],
    "modules": {
      "blink": {
        "hot_reload": true,
        "source": "scripts/blink.js",
        "optimize": false
      }
    }
  },
  "requires" : {
    "interfaces" : {
      "blink" : {
        "type" : "bit_port",
        "required" : true,
        "default" : [2],
        "description" : {
          "ru" : "LED индикатор",
          "en" : "LED indicator"
        }
      }
    }
  }
}
